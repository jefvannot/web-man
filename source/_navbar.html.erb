<div class="navbar">

  <!-- Logo -->
  <% link_to "/", class: "navbar-brand" do %>
  <%= image_tag "http://placehold.it/50x25" %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-right hidden-xs hidden-sm">

    <!-- Search form -->
    <form action="" class="navbar-search">
      <input type="text" class="navbar-search-input" placeholder="Search something">
      <button type="submit" class="navbar-search-btn">
        <i class="fa fa-search"></i>
      </button>
    </form>

    <!-- Text link -->
    <%= link_to "Team", "#", class: "navbar-item navbar-link" %>

    <!-- Notification link-->
    <a href="" class="navbar-item navbar-link">
      <div class="badge-container">
        <i class="fa fa-envelope-o"></i>
        <div class="badge badge-blue">3</div>
      </div>
    </a>

    <!-- Profile picture and dropdown -->
    <div class="navbar-item">
      <div class="dropdown">
        <img src="http://placehold.it/50x50" class="avatar dropdown-toggle" id="navbar-menu" data-toggle="dropdown">
        <ul class="dropdown-menu dropdown-menu-right navbar-dropdown-menu">
          <li><%= link_to "Profile", "#" %></li>
          <li><%= link_to "Dashboard", "#" %></li>
          <li><%= link_to "Log Out", "#" %></li>
        </ul>
      </div>
    </div>

    <!-- Button (call-to-action) -->
    <%= link_to "Post stuff", "#", class: "navbar-item navbar-button btn" %>

  </div>

  <!-- Dropdown appearing on mobile only -->
  <div class="navbar-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-dropdown-menu">
        <li><%= link_to "Link", "#" %></li>
        <li><%= link_to "Link", "#" %></li>
        <li><%= link_to "Link", "#" %></li>
        <li><%= link_to "Link", "#" %></li>
        <li><%= link_to "Link", "#" %></li>
      </ul>
    </div>
  </div>

</div>
